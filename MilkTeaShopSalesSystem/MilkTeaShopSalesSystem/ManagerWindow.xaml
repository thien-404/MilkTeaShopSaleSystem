<Window x:Class="MilkTeaShopSalesSystem.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilkTeaShopSalesSystem"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="images/41505336.jpg" Stretch="Fill"/>
    </Window.Background>
    <Grid>

        <Button x:Name="ManageDrinkButton"  Content="View Drink" HorizontalAlignment="Left" Height="50" Margin="80,167,0,0" VerticalAlignment="Top" Width="165" TabIndex="4" Click="ManageDrinkButton_Click"   />

        <Button x:Name="ManageStaffButton" Content="View Staff" HorizontalAlignment="Center" Height="50" Margin="0,167,0,0" VerticalAlignment="Top" Width="164" TabIndex="5" Click="ManageStaffButton_Click"   />

        <Button x:Name="ManageOrderDetailButton" Content="View Order Detail" HorizontalAlignment="Left" Height="49" Margin="555,168,0,0" VerticalAlignment="Top" Width="165" TabIndex="7"  RenderTransformOrigin="0.506,-1.479" Click="ManageOrderDetailButton_Click"   />

    </Grid>
</Window>
